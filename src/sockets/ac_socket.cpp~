#include "ac_socket.h"

/// ==================================================================
/// Constructor
/// ==================================================================
ACSocket::ACSocket()
{
 /// Initialise the file descriptor
 FD = 0;
 
 /// Indicates that the configuration has not been set
 Initialised = false;
 
 /// The default port
 Port = 0;
 
 /// Initialise as disconnected
 Status = SOCKET_DISCONNECTED;
 
}

/// ==================================================================
/// Destructor
/// ==================================================================
ACSocket::~ACSocket()
{ }
